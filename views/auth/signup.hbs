<!-- views/auth/signup.hbs -->
<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">

  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="your email" required="true">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password" required="true">
  <br> {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>
</form>
<a href="/auth/google"><button>Signup with Google</button></a>
<p class="account-message">
  Do you already have an account?
  <a href="/auth/login">Login</a>
</p>