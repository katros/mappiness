<div class="top-bar">
    <div class="logo"><span>felicitas</span></div>
    <div class="btn-white-ghost"><a href="/protected/map">GO BACK TO MAP</a></div>
    <a href="/auth/logout">
        <svg class="profile-icons profile-icons__logout"><use xlink:href="/images/sprite.svg#icon-log-out"></use></svg>
    </a>
</div>

<br>
<div class="profile">

    <h1>{{customStories.user.username}}</h1>

    <br> {{#each customStories.stories}}
    <div class="user-story-container">
        <p class="story-copy">{{this.story}}</p>
        <div class="location">

            {{#if this.address.street}}
            <p>{{this.address.street}}</p>
            {{/if}} {{#if this.address.city_district}}
            <p>{{this.address.city_district}}</p>
            {{/if}} {{#if this.address.town}}
            <p>{{this.address.town}}</p>
            {{/if}} {{#if this.address.city}}
            <p>{{this.address.city}}</p>
            {{/if}} {{#if this.address.county}}
            <p>{{this.address.county}}</p>
            {{/if}} {{#if this.address.country}}
            <p>{{this.address.country}}</p>
            {{/if}}
            <p>{{moment this.created_at format="DD.MM.YYYY, HH:mm"}}</p>
        </div>

        <div class="story-btn-container">
            <form action="/protected/{{this._id}}/delete" method='POST'>
                <svg class="story-icon story-icon__delete"><use xlink:href="/images/sprite.svg#icon-trash-2"></use></svg>
            </form>
            <a href="/protected/{{this._id}}/edit"><svg class="story-icon story-icon__edit"><use xlink:href="/images/sprite.svg#icon-edit"></use></svg></a>
        </div>
    </div>
    <br> {{/each}}
    <ul>
        {{#each customStories.user.following }}
        <a href="/protected/user/{{this.this}}"><li>{{this}}</li></a>

        {{/each}}
    </ul>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script src='/javascripts/follow.js'></script>